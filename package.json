{
    "name": "@anglr/server-stuff",
    "version": "0.0.0-placeholder",
    "description": "Angular 'stuff' that is available only for server side rendering",
    "module": "./dist/es5/server-stuff.js",
    "esm2015": "./dist/es2015/server-stuff.js",
    "typings": "./server-stuff.d.ts",
    "sideEffects": false,
    "scripts": {
        "build": "ngc -p tsconfig.es5.json && ngc -p tsconfig.es2015.json",
        "clean": "rimraf dist tests **/tsdoc-metadata.json src/**/*.d.ts src/**/*.d.ts.map */*.metadata.json ./*.metadata.json ./*.d.ts ./*d.ts.map */dist",
        "clean:duplicates": "rimraf */dist/*/src",
        "clean:deps": "rimraf package-lock.json node_modules",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "version:placeholder": "replace-in-file /\\\"version\\\":\\s\\\".*?\\\"/g \"\\\"version\\\": \\\"0.0.0-placeholder\\\"\" package.json --isRegex",
        "version:git": "ngv -e \"replace-in-file 0.0.0-placeholder $GIT_VERSION package.json\"",
        "prepublishOnly": "npm run bundle && npm run version:placeholder && npm run version:git",
        "postpublish": "npm run doc && npm run version:placeholder && npm run clean",
        "bundle": "npm run clean && npm run build && npm run clean:duplicates",
        "deploy": "npm publish",
        "deploy:next": "npm publish --tag next",
        "pretest": "webpack",
        "test": "karma start karma.conf.js",
        "doc": "path-exists docs && npm run doc:generate || echo \"No docs generated!\"",
        "doc:generate": "npm run doc:generate:server-stuff && npm run doc:save",
        "doc:save": "cd docs && git add . && git commit -m \"INT: updated API docs ng-server-stuff\" && git push && cd ..",
        "doc:generate:server-stuff": "rimraf docs/content/api/ng-server-stuff && npm run doc:json:server-stuff && npm run doc:md:server-stuff",
        "doc:json:server-stuff": "api-extractor run --local --verbose -c api-extractor.json",
        "doc:md:server-stuff": "api-documenter markdown -i temp -o docs/content/api/ng-server-stuff && rimraf temp"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ressurectit/ng-server-stuff.git"
    },
    "author": "kukjevov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ressurectit/ng-server-stuff/issues"
    },
    "homepage": "https://github.com/ressurectit/ng-server-stuff",
    "peerDependencies": {
        "@angular/core": ">=9.0.0",
        "@angular/common": ">=9.0.0",
        "@angular/platform-server": ">=9.0.0",
        "@anglr/common": ">=7.0.0",
        "@anglr/rest": ">=7.0.0"
    },
    "devDependencies": {
        "@angular/animations": "^9.0.0",
        "@angular/core": "^9.0.0",
        "@angular/common": "^9.0.0",
        "@angular/platform-server": "^9.0.0",
        "rxjs": "^6.5.0",
        "@anglr/common": "^7.0.0",
        "@anglr/rest": "^7.0.0",
        "@types/jasmine": "~2.8.7",
        "@types/node": "^11.15.6",
        "@angular/compiler-cli": "^9.0.0",
        "@angular/compiler": "^9.0.0",
        "@angular/language-service": "^9.0.0",
        "@angular/platform-browser-dynamic": "^9.0.0",
        "@angular/platform-browser": "^9.0.0",
        "@microsoft/api-extractor": "7.7.8",
        "@microsoft/api-documenter": "7.7.12",
        "tsickle": "0.38.0",
        "karma-cli": "1.0.1",
        "karma": "3.1.1",
        "karma-jasmine": "1.1.2",
        "karma-phantomjs-launcher": "1.0.4",
        "karma-chrome-launcher": "2.2.0",
        "karma-webpack": "3.0.5",
        "karma-jasmine-html-reporter": "1.4.0",
        "jasmine": "3.3.0",
        "awesome-typescript-loader": "5.2.1",
        "angular2-template-loader": "0.6.2",
        "raw-loader": "1.0.0",
        "sass-loader": "7.1.0",
        "css-loader": "1.0.1",
        "file-loader": "3.0.1",
        "style-loader": "0.23.1",
        "rimraf": "2.6.3",
        "copyfiles": "2.1.0",
        "replace-in-file": "4.1.0",
        "path-exists-cli": "1.0.0",
        "typescript": "3.7.5",
        "webpack": "4.32.2",
        "npm-git-version": "1.1.1"
    }
}
